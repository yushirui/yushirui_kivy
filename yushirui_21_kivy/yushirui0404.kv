# 自定义布局
<YushiruiWidget>:
    orientation: 'vertical'

    Label:
        text: 'can only display glyphs that is available in the font'
        font_size: '20sp'
        color: .9, .2, .1, 1
        italic: True
        text_size: cm(6), mm(20)
        halign: 'right'
        valign: 'middle'
        strikethrough: True


    Label:
        # 画布
        canvas:
            # 颜色
            Color:
                # r红色，g绿色，b蓝色，a透明度
                rgba: [1, 1, 1, 1]

            # 矩形
            Rectangle:
                # 绝对大小 = 组件大小
                size: self.size
                # 绝对位置 = 组件位置
                pos: self.pos

        text: 'can only display glyphs that is available in the font'
        color: .2, .2, .9, 1
        bold: True
        text_size: cm(4), cm(2)
        halign: 'left'
        valign: 'top'
        underline: True
        line_height: 2.0
