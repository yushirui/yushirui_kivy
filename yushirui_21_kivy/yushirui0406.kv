# 自定义布局
<YushiruiWidget>:
    orientation: 'vertical'
    Label:
        # 画布
        canvas:
            # 颜色
            Color:
                # r红色，g绿色，b蓝色，a透明度
                rgba: [1, 1, 1, 1]

            # 矩形
            Rectangle:
                # 绝对大小 = 组件大小
                size: self.size
                # 绝对位置 = 组件位置
                pos: self.pos

        text: '[ref="click"]can only display[/ref] glyphs that is available in the font'
        color: .2, .2, .9, 1
        markup: True
        on_ref_press:
            print('ref named click is running')
            root.print_it()
