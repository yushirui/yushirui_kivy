# 自定义布局
<YushiruiWidget>:

    # 垂直布局
    orientation: 'vertical'

    # 标签
    Label:
        # 画布
        canvas:
            # 颜色
            Color:
                # r红色，g绿色，b蓝色，a透明度
                rgba: [1, 1, 1, 1]

            # 矩形
            Rectangle:
                # 绝对大小 = 组件大小
                size: self.size
                # 绝对位置 = 组件位置
                pos: self.pos

        # 文本
        text: '[ref="click"]金海心[/ref] 萨顶顶'
        # 颜色
        color: .2, .2, .9, 1
        # 文本html标签生效
        markup: True
        # ref点击事件
        on_ref_press:
            print('你点击了金海心')
            # 父组件的打印方法
            root.print_it()
