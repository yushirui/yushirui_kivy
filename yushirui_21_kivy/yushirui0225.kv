# 自定义按钮，继承按钮
<YushiruiButton@Button>:

    # 字体大小
    font_size: 25

    # 字体加粗
    bold: True

    # 按钮边框
    border: (2, 2, 2, 2)

# 自定义布局
<YushiruiWidget>:

    # 垂直布局
    orientation: 'vertical'

     # 标签
    Label:
        # id
        id: time_label_id

        # 文本，加粗b
        text: '[b]00[/b]:00:00'

        # 用标记，使b加粗标记生效
        markup: True

        # 字体大小
        font_size: 60

    # 线性布局
    BoxLayout:
        # 水平
        orientation: 'horizontal'

        # 布局组件，20px
        padding: 20

        # 组件组件，20px
        spacing: 20

        # 相对大小，宽1，高空
        size_hint: (1, None)

        # 绝对高（必须把相对大小高设为空）
        height: 90

        # 自定义按钮
        YushiruiButton:
            # id
            id: start_stop_button_id
            # 文本
            text: 'Start'
            # 信号与槽
            on_press: root.start_or_stop()

        # 自定义按钮
        YushiruiButton:
            # 文本
            text: 'Reset'
            # 信号与槽
            on_press: root.reset_clock()
    # 标签
    Label:
        # id
        id: stopwatch
        # 文本
        text: '00:00.[size=40]00[/size]'
        # 文本，使用标记语言，使size大小标记生效
        markup: True
        # 字体大小
        font_size: 60

