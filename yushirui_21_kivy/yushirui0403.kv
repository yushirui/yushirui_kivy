# 自定义布局
<YushiruiWidget>:

    # 按钮
    Button:
        # 文本
        text: '可惜没如果'
        # 相对大小，当前窗口的比例大小
        size_hint: .2, .15
        # 相对位置
        pos_hint: {'center_x':.5, 'center_y':.5}
        # 正常背景为空
        background_normal: ''
        # 背景色
        background_color: [.1, .5, .5, 1]
        # 释放事件
        on_release:
            # 释放槽函数
            root.release_button()
            # 打印文本
            print('释放槽函数')
        # 点击事件
        on_press:
            # 点击槽函数
            root.press_button()
            # 打印文本
            print('点击槽函数')
