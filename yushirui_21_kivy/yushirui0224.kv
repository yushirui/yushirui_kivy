# 自定义布局
<YushiruiWidget>:

    # 布局方向，左到右，上到下
    # ['lr-tb', 'tb-lr', 'rl-tb', 'tb-rl', 'lr-bt', 'bt-lr', 'rl-bt', 'bt-rl']
    orientation: 'lr-tb'

    # 布局组件间距，水平20，垂直10
    padding: [20, 10]

    # 组件组件间距，水平20，垂直10
    spacing: [20, 10]

    # 画布
    canvas:
        # 颜色
        Color:
            # r红色，g绿色，b蓝色，a透明度
            rgba: [1, 1, 1, 1]

        # 矩形
        Rectangle:
            # 绝对大小 = 组件大小
            size: self.size
            # 绝对位置 = 组件位置
            pos: self.pos

