# 自定义布局
<YushiruiWidget>:

    # 画布
    canvas:
        # 颜色
		Color:
		    # r红色，g绿色，b蓝色，a透明度
            rgba: [1, 1, 1, 1]

		# 矩形
		Rectangle:
		    # 绝对大小 = 组件大小
			size: self.size
			# 绝对位置 = 组件位置
			pos: self.pos

    # 按钮
    Button:
        # 文本
        text: '余时锐'
        # 相对大小，当前窗口的比例大小
        size_hint: .2, .15
        # 相对位置，按钮相对窗口位置，按钮左上角的点，与窗口左边0.2，下边0.6
        pos_hint: {'x': 0.2, 'y': .6}

    # 按钮
    Button:
        # 文本
        text: '鳕鱼'
        # 窗口比例大小
        size_hint: .2, .15
        # 按钮相对窗口位置，按钮右边，与窗口左边0.8，按钮顶边，与窗口下边0.6
        pos_hint: {'right': 0.8, 'top': .4}
