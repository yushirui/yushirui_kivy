# 自定义布局
<YushiruiWidget>:

    # 相对大小
    size_hint: .5, .5
    # 相对位置
    pos_hint: {'center_x': .5, 'center_y': .5}
    # 默认选项卡
    do_default_tab: False

    # 选项卡
    TabbedPanelItem:
        # 文本
        text: '年少有为'
        # 标签
        Label:
            text: "假如我年少有为不自卑，懂得什么是珍贵"

    # 选项卡
    TabbedPanelItem:
        # 文本
        text: '可惜没如果'

        # 线布局
        BoxLayout:
            # 标签
            Label:
                # 文本
                text: '如果早点了解，那率性的你，'
            # 按钮
            Button:
                # 文本
                text: '或者晚一点，遇上成熟的我，不过，oh~'
    # 选项卡
    TabbedPanelItem:
        # 文本
        text: '青春住了谁'
        # 文档
        RstDocument:
            # 文本
            text:
                '\\n'.join(("像是一条河川 转过几个弯", "也有好几段 特别湍急困难",
                "就算泥泞走来 一路上 我们多了些能耐 oh~"))
