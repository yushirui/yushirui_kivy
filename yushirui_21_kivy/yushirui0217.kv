# 自定义布局
<YushiruiWidget>:

    # 翻页动画、持续时间
    anim_kwargs: {'d': 10, 't': 'linear'}

    # 默认页码
    page: 2

    # 边界
    border: '100dp'

    # 翻页灵敏度
    swipe_threshold: .8

    # 按钮
    Button:
        # 文本
        text: '页面1'
        # 背景色
        background_color: 0.3, .3, .3, 1

    # 按钮
    Button:
        # 文本
        text: '页面2'
        # 背景色
        background_color: 0.9, .3, .3, 1

    # 按钮
    Button:
        # 文本
        text: '页面3'
        # 背景色
        background_color: 0.3, .9, .3, 1

    # 按钮
    Button:
        # 文本
        text: '页面4'
        # 背景色
        background_color: 0.3, .3, .9, 1
