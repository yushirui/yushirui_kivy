<YushiruiWidget>:

    # 垂直布局
    orientation: 'vertical'

    # 布局/组件间距
    padding:[10, 40, 40, 30]

    canvas:
		Color:
			rgba: [1, 1, 1, 1]
		Rectangle:
			size: self.size
			pos: self.pos

    Button:
        text: 'Hello'
        background_color: .6, .2, .2, 1

    Button:
        text: 'BoxLayout'
        background_color: .2, .6 , .3, 1

    BoxLayout:
        # 水平布局
        orientation: 'horizontal'

        # 组件间距
        spacing: 20
        Button:
            text: 'first'
            background_color: .2, .2 , .7, 1

        Button:
            text: 'second'
            size_hint_y: .3
            background_color: .4, .2 , .2, 1
