# 重写按钮
<Button>:
    # 字体大小
    font_size: 20
    # 相对大小
    size_hint: 0.2, 0.2

# 自定义布局
<YushiruiWidget>:

    # 线性布局，默认水平
    # 空的占位
    BoxLayout:

    # 相对布局
    RelativeLayout:
        # 按钮
        Button:
            # 文本
            text:"年少有为"
            # 背景色
            background_color: 0.1, 0.5, 0.6, 1
             # 相对大小
            pos_hint: {"right":1, "top":1}

        # 按钮
        Button:
            # 文本
            text:"青春住了谁"
            # 背景色
            background_color: 1, 0, 0, 1
             # 相对大小
            pos_hint: {"x":0, "top":1}

        # 按钮
        Button:
            # 文本
            text:"可惜没如果"
            # 背景色
            background_color: 0.4, 0.5, 0.6, 1
             # 相对大小
            pos_hint: {"center_x":.5, "center_y":.5}

        # 按钮
        Button:
            # 文本
            text:"天后"
            # 背景色
            background_color: 0, 0, 1, 1
            # 相对大小
            pos_hint: {"x":0, "y":0}

        # 按钮
        Button:
            # 文本
            text:"其实我们值得幸福"
            # 背景色
            background_color: 0.8, 0.9, 0.2, 1
             # 相对大小
            pos_hint: {"right":1, "y":0}
