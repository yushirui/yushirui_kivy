# 自定义布局
<YushiruiWidget>:

    # 按钮
    Button:
        # 文本
        text: 'Item0'
        # 相对大小，y为空
        size_hint_y: None
        # 高，具体值
        height: 44
        # 点击事件
        on_release: root.select('item0')

    # 按钮
    Button:
        # 文本
        text: 'item1'
        # 相对大小，y为空
        size_hint_y: None
         # 高，具体值
        height: 44
        on_release: root.select('item1')

    # 按钮
    Button:
        # 文本
        text: 'Item2'
        # 相对大小，y为空
        size_hint_y: None
        #  高，具体值
        height: 44
        # 点击事件
        on_release: root.select('item2')
