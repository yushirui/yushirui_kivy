# 自定义布局
<YushiruiWidget>:
    # 画布
    canvas:
        # 颜色
        Color:
            # r红色，g绿色，b蓝色，a透明度
            rgba: [1, 1, 1, 1]

        # 矩形
        Rectangle:
            # 绝对大小 = 组件大小
            size: self.size
            # 绝对位置 = 组件位置
            pos: self.pos

    TextInput:
        text: 'c0c.ink'
        multiline: False
        pos: 400, 380
        allow_copy: False

    TextInput:
        text: 'cocpy.com'
        pos: 100, 180
        halign: 'center'
        background_color: 100, 2, 2, 1

    TextInput:
        text: 'first'
        pos: 400, 180
        readonly: True
