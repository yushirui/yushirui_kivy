# 自定义布局
<YushiruiWidget>:

    # 画布
    canvas:
        # 颜色
        Color:
            # r红色，g绿色，b蓝色，a透明度
            rgba: [1, 1, 1, 1]

        # 矩形
        Rectangle:
            # 绝对大小 = 组件大小
            size: self.size
            # 绝对位置 = 组件位置
            pos: self.pos

    # 输入框
    TextInput:
        # 文本
        text: '年少有为'
        # 不允许多行
        multiline: False
        # 绝对位置
        pos: 400, 380
        # 不允许复制
        allow_copy: False

    # 输入框
    TextInput:
        # 文本
        text: '青春住了谁'
        # 位置
        pos: 100, 180
        # 水平居中
        halign: 'center'
        # 背景色
        background_color: 100, 2, 2, 1

    # 输入框
    TextInput:
        # 文本
        text: '梦里'
        # 绝对位置
        pos: 400, 180
        # 只读
        readonly: True
