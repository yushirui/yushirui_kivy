# 自定义布局
<YushiruiWidget>:

    # 垂直布局
    orientation: 'vertical'

    # 单选框
    ToggleButton:
        # 文本
        text: 'Male'
        # 组
        group: 'sex'
        # 点击事件
        on_release: print('You have clicked Male Button')

    # 单选框
    ToggleButton:
        # 文本
        text: 'Female'
        # 组
        group: 'sex'
        # 状态
        state: 'down'
