<YushiruiWidget>:


    # 画布
    canvas:
        # 颜色
		Color:
			rgba: [1, 1, 1, 1]
		# 矩形
		Rectangle:
			size: self.size
			pos: self.pos

    Button:
        text: 'yushirui'
        size_hint: .2, .15
        pos_hint: {'center_x': 0.3, 'top': 0.75}

    Button:
        text: 'xueyu'
        size_hint: .2, .15
        pos_hint: {'x': 0.6, 'y': .25}
