# 自定义布局
<YushiruiWidget>:
    # 布局组件间隙
    padding: 20

    # 组件组件间隙
    spacing: 20

    # 列数
    cols: 3

    # 强制使用默认列宽
    col_force_default: True

    # 默认列宽
    col_default_width: 120

    # 强制使用默认行高
    row_force_default: True

    # 默认行高
    row_default_height: 40

    # 画布
    canvas:
        # 颜色
        Color:
            # r红色，g绿色，b蓝色，a透明度
            rgba: [1, 1, 1, 1]

        # 矩形
        Rectangle:
            # 绝对大小 = 组件大小
            size: self.size
            # 绝对位置 = 组件位置
            pos: self.pos


    # 按钮
    Button:
        # 文本
        text: '余时锐1'

        # 组合使用
        # 相对大小空
        size_hint_x: None
        # 宽度
        width: '100px'

    # 按钮
    Button:
        # 文本
        text: '余时锐2'

    # 按钮
    Button:
        # 文本
        text: '余时锐3'

    # 按钮
    Button:
        # 文本
        text: '余时锐4'